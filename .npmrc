# -------------------------------
# Project-level NPM configuration
# -------------------------------

# Automatically use legacy peer deps to avoid conflicts like react-json-view
legacy-peer-deps=true

# Use exact versions when installing dependencies (optional but reduces surprises)
save-exact=true

# Disable optional dependencies if you donâ€™t need them
optional=false

# Ensure consistent package-lock across environments
package-lock=true

# Always prefer offline cache if available (speeds up CI/CD)
prefer-offline=true

# Log level for NPM installs
loglevel=warn
